<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainSend">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Port"
        android:id="@+id/button_open_port"
        android:clickable="true"
        android:layout_below="@+id/textView_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button_send_port"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ip"
        android:text="192.168.1.10"
        android:layout_alignBottom="@+id/button_open_port"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dest. IP"
        android:id="@+id/textView"
        android:layout_below="@+id/editText_ip"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_port"
        android:layout_alignTop="@+id/editText_ip"
        android:layout_toRightOf="@+id/editText_ip"
        android:text="2362"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dest. Port"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/editText_ip"
        android:layout_toEndOf="@+id/editText_ip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X:"
        android:id="@+id/textView_touch_x_text"
        android:layout_alignBottom="@+id/button_send_port"
        android:layout_toRightOf="@+id/button_open_port"
        android:layout_toEndOf="@+id/button_open_port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Y:"
        android:id="@+id/textView_touch_y_text"
        android:layout_below="@+id/textView_touch_x_text"
        android:layout_alignLeft="@+id/textView_touch_x_text"
        android:layout_alignStart="@+id/textView_touch_x_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView_touch_x"
        android:layout_alignTop="@+id/textView_touch_x_text"
        android:layout_alignLeft="@+id/editText_ip"
        android:layout_alignStart="@+id/editText_ip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView_touch_y"
        android:layout_below="@+id/textView_touch_x"
        android:layout_alignLeft="@+id/textView_touch_x"
        android:layout_alignStart="@+id/textView_touch_x" />

</RelativeLayout>
